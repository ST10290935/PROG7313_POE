<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#616161"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense List"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by:"
            android:textSize="16sp"
            android:textColor="#424242"/>

        <Spinner
            android:id="@+id/spinnerCategoryFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:minHeight="48dp" />
    </LinearLayout>

    <!-- Date Picker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnSelectDateRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#009688"
            android:padding="10dp"
            android:text="Select Date Range"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvSelectedDateRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not set"
            android:textSize="16sp"
            android:textColor="#212121"
            android:gravity="center"
            android:paddingStart="8dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculator"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCurrencyConverter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Currency Converter"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <!-- Total Amount -->
    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: R0.00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Expense List -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExpenses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_expense"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvNoExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No expenses found"
            android:textSize="18sp"
            android:textColor="#757575"
            android:gravity="center"
            android:padding="16dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>
